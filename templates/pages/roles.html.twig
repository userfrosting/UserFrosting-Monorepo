{% extends "layouts/dashboard.html.twig" %}

{% block stylesheets_page %}
    <!-- Page-specific CSS asset bundle -->
    {{ assets.css('css/form-widgets') | raw }}
{% endblock %}

{# Overrides blocks in head of base template #}
{% block page_title %}Roles{% endblock %}

{% block page_description %}A listing of the roles for your site.  Provides management tools for editing and deleting roles.{% endblock %}

{% block body_matter %}
    <div id="alerts-page">
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="widget-roles" class="panel panel-primary">
                <div class="panel-heading panel-heading-buttons clearfix">
                    <h3 class="panel-title pull-left"><i class="fa fa-fw fa-drivers-license"></i> {{translate('ROLE', 2)}}</h3>
                    <div class="pull-right">
                        <button class="btn btn-sm btn-default js-download-table">Download CSV</button>
                    </div>
                </div>
                <div class="panel-body">
                    {% include "components/tables/roles.html.twig" with {
                            "table" : {
                                "id" : "table-roles"
                            }
                        }
                    %}
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success js-role-create">
                                <i class="fa fa-plus-square"></i>  Create New Role
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "components/page.js.twig" %}
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/roles') | raw }}

{% endblock %}
